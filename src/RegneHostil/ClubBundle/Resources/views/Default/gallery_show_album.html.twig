{% extends 'RegneHostilClubBundle:Default:layout.html.twig' %}

{% block content %}
<div class=entry>
	<h1>{{ album }}</h1>
</div>
<center>
<div class="row-fluid">
	{% for photo in photos %}
		
		<div class="span4 gallery-album">
						<a class="thumbnail" rel="lightbox[photos]" title="{{ album }}" href="/gallery/{{ album }}/{{ photo }}">

							<img class="img-rounded" src="/gallery/{{ album }}/{{ photo }}">
						</a>
					</div>

		{% if loop.index % 3 == 0 %}
			</div>
			<div class="row-fluid">
		{% endif %}

	{% endfor %}
</div>
{% endblock %}