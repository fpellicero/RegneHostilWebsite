{% extends 'RegneHostilClubBundle:Default:layout.html.twig' %}

{% block content %}
<div class=entry>
	<h1>Galeria</h1>
</div>
<center>
<div class="row-fluid">
	{% for album in albums %}
		
		<div class="span4 gallery-album">
			<a class='thumbnail' href="{{ path('regne_hostil_club_show_album', {'album' : album }) }}">
				<img class=img-rounded src="/gallery/{{ album }}/{{ album }} (1).jpg">
			</a>
			{{ album }}
		</div>

		{% if loop.index % 3 == 0 %}
			</div>
			<div class="row-fluid">
		{% endif %}

	{% endfor %}
</div>
{% endblock %}