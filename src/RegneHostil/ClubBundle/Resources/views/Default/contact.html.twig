{% extends 'RegneHostilClubBundle::layout.html.twig' %}

{% block content %}
<div class=entry>
	<h1>Contacta amb nosaltres!</h1>
	
	<form class="form-horizontal" method=post action=/regnehostil/about/contact>
		
		<div class="control-group">
			<label class="control-label" for="inputName">Name</label>
			<div class="controls">
				<input type='text' id='inputName' placeholder='name'>
			</div>
		</div>
		
		<div class="control-group">
			<label class="control-label" for="inputEmail">Email</label>
			<div class="controls">
				<input type='email' id='inputEmail' placeholder=Email>
			</div>
		</div>
		
		<div class="control-group">
			<label class="control-label" for="inputText">Consulta</label>
			<div class="controls">
				<textarea rows=10 cols=80 id='inputText' placeholder=""></textarea>
			</div>
		</div>
		
		<!-- reCaptcha widget. http://www.google.com/recaptcha -->
		<div class="well">
			
			<center>
				<!-- Don't escape the captcha! -->
				{{ captcha|raw }}
				<input type=submit name='send'>
			</center>
		</div>	
		
	</form>
</div>
{% endblock %}