{% extends 'RegneHostilAdminBundle::layout.html.twig' %}

{% block content %}
	<table class='table table-hover table-striped'>
		<thead>
			<tr>
				<th>Id</th>
				<th>Idioma</th>
				<th>Titol</th>
				<th>Data</th>
			</tr>
		</thead>
		<tbody>
		{% for noticia in noticies %}
			<tr>
				<td>{{ noticia.id }}</td>
				<td>{{ noticia.lang }}</td>
				<td>{{ noticia.title }}</td>
				<td>{{ noticia.date|date("d/m/Y") }}</td>
				<td><a href="{{ path('regne_hostil_admin_edit_noticia', {'id' : noticia.id }) }}">Edit</td>
				<td><a href="{{ path('regne_hostil_admin_delete_noticia', {'id' : noticia.id }) }}">Delete</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
{% endblock %}